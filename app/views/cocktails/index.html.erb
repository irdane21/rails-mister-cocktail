<div class="banner">
  <div class="banner-content">
    <h1>My Fun Bar's Cocktail</h1>
    <p>Pick your favorite cocktail or create it!</p>
  </div>
  <div class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= image_tag "logo.png", alt: "logo", width: 50 %></a>
    <ul class="dropdown-menu dropdown-menu-left navbar-wagon-dropdown-menu">
      <li><%= link_to "Create a Cocktail", new_cocktail_path %></li>
      <li><%= link_to "Create a Cocktail", new_cocktail_path %></li>
      <li><%= link_to "Create a Cocktail", new_cocktail_path %></li>
    </ul>
  </div>
</div>
<div class="main-container">
  <div class="container">
    <br>
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
          <%= render 'cocktails/card', cocktail: cocktail %>
        </div>
      <% end %>
    </div>
    <br>
    <div class="col-sm-4 col-offset-4"></div>
    <%= link_to "+ Add a new cocktail", new_cocktail_path,
           class: 'btn btn-primary'%>
  </div>
  <div class="clin-oeil", id= "map">
    <%= image_tag "cocktail_2.jpg", alt: "test", width: 300 %>
  </div>
</div>
